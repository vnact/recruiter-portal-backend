{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": ["libraries/*", "apps/*"],
  "command": {
    "publish": {
      "yes": true,
      "createRelease": "github",
      "conventionalCommits": true,
      "message": "chore(release): [skip ci] publish",
      "registry": "https://npm.pkg.github.com"
    }
  }
}
